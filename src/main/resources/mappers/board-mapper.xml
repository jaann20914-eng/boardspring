<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE mapper
  PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
  "https://mybatis.org/dtd/mybatis-3-mapper.dtd">
  
  
<mapper namespace="Board">

<!--로그인 가능 체크-->   
<select id="getAll" resultType="com.keud.boardproject.dto.BoardDTO">
    select * from board order by seq desc
</select>

<select id="getOne" resultType="com.keud.boardproject.dto.BoardDTO">
    select * from board where seq=#{seq}
</select>

<insert id="insert" >
    insert into board (seq, title, content, writer, writedate) values (board_seq.nextval, #{title}, #{content}, #{writer}, sysdate)
</insert>

<insert id="delete" >
    delete from board where seq=#{seq}
</insert>




</mapper>